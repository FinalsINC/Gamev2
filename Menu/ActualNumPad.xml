<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.namedina.myfirstapp.MainActivity$PlaceholderFragment" >

    <TextView
        android:id="@+id/buffer"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true" />

    <LinearLayout
        android:id="@+id/delete_enter"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/buffer"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:weightSum="5" >

        <ImageView
            android:id="@+id/delete"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/delete" 
            android:clickable="true"/>

        <TextView
            android:id="@+id/between_delete_enter"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="3" 
            android:clickable="true"/>

        <ImageView
            android:id="@+id/enter"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/enter"
            android:textSize="25sp" 
            android:clickable="true"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/zero_to_four"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/delete_enter"
        android:orientation="horizontal"
        android:weightSum="5" >

        <ImageView
            android:id="@+id/btn0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/zero" 
            android:clickable="true"/>

        <ImageView
            android:id="@+id/btn1"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/one" 
            android:clickable="true"/>

        <ImageView
            android:id="@+id/btn2"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/two" 
            android:clickable="true"/>

        <ImageView
            android:id="@+id/btn3"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/three" 
            android:clickable="true"/>

        <ImageView
            android:id="@+id/btn4"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/four" 
            android:clickable="true"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/five_to_nine"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/zero_to_four"
        android:orientation="horizontal"
        android:weightSum="5" >

        <ImageView
            android:id="@+id/btn5"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/five" />

        <ImageView
            android:id="@+id/btn6"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/six" />

        <ImageView
            android:id="@+id/btn7"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/seven" />

        <ImageView
            android:id="@+id/btn8"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/eight" />

        <ImageView
            android:id="@+id/btn9"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/nine" />
    </LinearLayout>

    <EditText
        android:id="@+id/editText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:inputType="number" >

        <requestFocus />
    </EditText>

</RelativeLayout>
